rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is accessing their own data
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Missions collection - admins can write, everyone can read published
    match /missions/{missionId} {
      allow read: if resource.data.isPublished == true || isAdmin();
      allow write: if isAdmin();
    }

    // Tracks collection - admins can write, everyone can read published
    match /tracks/{trackId} {
      allow read: if resource.data.isPublished == true || isAdmin();
      allow write: if isAdmin();
    }

    // Users collection - users can read/write their own data, admins can read all
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) || isAdmin();
      
      // User progress subcollection
      match /progress/{progressId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
      
      // User achievements subcollection
      match /achievements/{achievementId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }

    // Leaderboards collection - everyone can read, admins can write
    match /leaderboards/{leaderboardId} {
      allow read: if true;
      allow write: if isAdmin();
      
      // Leaderboard entries
      match /entries/{entryId} {
        allow read: if true;
        allow write: if isAdmin() || isOwner(resource.data.userId);
      }
    }

    // Admin settings collection - only admins can access
    match /admin/{document=**} {
      allow read, write: if isAdmin();
    }

    // Analytics collection - admins can write, users can read their own
    match /analytics/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isAdmin();
    }
  }
}
